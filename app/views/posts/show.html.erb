<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if @post.user_id == current_user.id %>
  <%= link_to '編集', edit_post_path(@post) %>
  <%= link_to '削除', @post, method: :delete, data: { confirm: '記事を削除してもよろしいですか?' } %>
<% end %>
