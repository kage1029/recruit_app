<p id="notice"><%= notice %></p>

<%= render 'layouts/sidebar' %>
<div class="main-container">
  <h1>記事一覧（posts）</h1>

  <%= link_to '記事を投稿する', new_post_path %>

  <% @posts.each do |post| %>
    <div class="post">
      <img src="https://dime.jp/genre/files/2020/02/shutterstock_572338033-770x514.jpg"　width="560" height="228">
      <p>ユーザID：<%= post.user_id %></p>
      <p>タイトル：<%= post.title %></p>
      <p>本文：<%= post.content %></p>
      <%= link_to '詳細を見る', post %>
    </div>
  <% end %>
</div>

